<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/offwhite</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="ToolbarTitleStylegray">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/black</item>
        <!-- <item name="colorControlHighlight">@color/colorPrimary</item>
         <item name="android:backgroundTint">@color/colorPrimary</item>-->

    </style>

    <style name="SwitchTheme2" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorForeground">@color/black</item>
        <!-- <item name="colorControlHighlight">@color/colorPrimary</item>
         <item name="android:backgroundTint">@color/colorPrimary</item>-->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <!-- <item name="colorControlActivated">@color/colorPrimary</item>
         <item name="colorControlHighlight">@color/colorPrimary</item>
         <item name="android:backgroundTint">@color/colorPrimary</item>-->
    </style>

    <style name="Text14GreyStyleView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:color">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text12GreyStyleView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:color">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text10GreyStyleView">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="Text14OrangeStyleView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="Text12OrangeStyleView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="EditTextStyle2">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="Text10OrangeStyleView">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/offwhite</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/offwhite</item>
        <item name="colorControlNormal">@color/offwhite</item>
        <item name="colorControlActivated">@color/offwhite</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>

    <style name="ToolbarStylewhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>
</resources>
